{
  "name": "airtable2teable",
  "version": "0.0.0",
  "description": "The data pipeline from airtable database to teable database.",
  "homepage": "https://github.com/y-t99/airtable2teable",
  "main": "index.js",
  "author": "itou ng",
  "scripts": {
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.test.ts\"",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.test.ts\" --fix",
    "build": "yarn run clean && tsc -p tsconfig.build.json && tsc-alias",
    "prepare": "husky install",
    "test": "jest"
  },
  "dependencies": {
    "@prisma/client": "^5.2.0",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "nock": "^13.3.3",
    "prettier": "^3.0.0",
    "prisma": "^5.2.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.7",
    "tslint": "^6.1.3",
    "typescript": "^5.0.4"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePaths": [
      "<rootDir>/src"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --config .prettierrc --write",
      "eslint --fix",
      "git add"
    ]
  },
  "files": [
    "/dist",
    "package.json",
    "README.md"
  ]
}
