{
  "name": "airtable2teable",
  "version": "0.0.0",
  "description": "The data pipeline from airtable database to teable database.",
  "homepage": "https://github.com/y-t99/airtable2teable",
  "main": "index.js",
  "author": "itou ng",
  "scripts": {
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.test.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "build": "pnpm run clean && tsc -p tsconfig.build.json && tsc-alias",
    "prepare": "husky install",
    "test": "jest"
  },
  "dependencies": {
    "axios": "1.5.1",
    "class-transformer": "^0.5.1",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "lodash": "^4.17.21",
    "rxjs": "^7.8.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "nock": "^13.3.4",
    "prettier": "^3.0.0",
    "prisma": "^5.2.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.0.4"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "modulePaths": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --config .prettierrc --write",
      "eslint --fix",
      "git add"
    ]
  },
  "files": [
    "/dist",
    "package.json",
    "README.md"
  ],
  "engines": {
    "pnpm": ">=8.9.0",
    "npm": "please-use-pnpm"
  },
  "packageManager": "pnpm@8.9.2"
}
